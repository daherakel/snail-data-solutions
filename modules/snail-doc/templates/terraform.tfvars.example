# Terraform Variables Template para Nuevo Tenant
# Copiar este archivo y renombrarlo a {TENANT_ID}.tfvars

# =====================================================
# Información del Proyecto
# =====================================================
project_name = "bedrock-agents"
environment  = "dev"  # dev, staging, prod
tenant_id    = "default"  # ID único del tenant

# =====================================================
# Configuración de Bedrock Models
# =====================================================
bedrock_llm_model_id       = "anthropic.claude-3-haiku-20240307-v1:0"
bedrock_embedding_model_id = "amazon.titan-embed-text-v1"

# Modelos recomendados por ambiente:
# Dev:     meta.llama3-3-70b-instruct-v1:0 (más barato)
# Staging: anthropic.claude-3-haiku-20240307-v1:0 (balanceado)
# Prod:    anthropic.claude-3-5-sonnet-20241022-v2:0 (mejor calidad)

# =====================================================
# Configuración de RAG
# =====================================================
max_context_chunks = 5  # Número de chunks a incluir en contexto

# =====================================================
# Configuración de Lambda Functions
# =====================================================
pdf_processor_timeout = 300  # 5 minutos (segundos)
pdf_processor_memory  = 1024  # 1 GB (MB)
query_handler_timeout = 60    # 1 minuto (segundos)
query_handler_memory  = 512   # 512 MB

# =====================================================
# Configuración de Logging
# =====================================================
log_level = "INFO"  # DEBUG, INFO, WARNING, ERROR

# =====================================================
# Configuración de Cache
# =====================================================
enable_query_cache = true
cache_ttl_seconds  = 604800  # 7 días

# =====================================================
# Configuración de Conversaciones
# =====================================================
max_history_messages = 10  # Mensajes a cargar del historial

# =====================================================
# Configuración de Integraciones
# =====================================================
# Habilitar integración Slack
enable_slack_integration = false

# Habilitar integración Teams
enable_teams_integration = false

# Habilitar integración WhatsApp
enable_whatsapp_integration = false

# =====================================================
# Configuración de Function URLs
# =====================================================
create_function_url = true  # Crear Function URL para query handler

# =====================================================
# Tags
# =====================================================
tags = {
  Project     = "bedrock-agents"
  Environment = "dev"
  Tenant      = "default"
  ManagedBy   = "terraform"
}

